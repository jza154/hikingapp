<% provide(:title, "Home") %>

<!-- Header Section -->
<section id="hero-area">
    <div class="container">
        <div class="col-md-12 text-center" style="margin-top:100px;">
            <div class="block wow fadeInUp"  data-wow-delay=".3s">
                <section class="cd-intro">
                    <h1 class="wow fadeInUp animated cd-headline slide" data-wow-delay=".4s">
                    <span>WELCOME TO DOGGIE WALK</span><br>
                    </h1>
                </section>
                <h2 class="wow fadeInUp animated" data-wow-delay=".6s" style="color:black;">
                    Want to get active in your local dog community? <br /> We're here to help.
                </h2>
                <a class="btn-lines dark light wow fadeInUp animated smooth-scroll btn btn-default" id="get-started-btn" data-wow-delay=".9s" href="#about" data-section="#about" >
                    Get Started
                </a>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading-agency">HOW IT WORKS</h2>
                <h3 class="section-subheading-agency text-muted">We'll match you with a dog owner or dog walker.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    <li>
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="assets/about/1.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Step 1</h4>
                                <h4 class="subheading">Sign up</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">
                                    All you need is your email address. <br /> The rest is free!
                                </p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="assets/about/2.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Step 2</h4>
                                <h4 class="subheading">Create your profile</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">
                                    The more info you fill out, the better chances of <br />
                                    others accepting you as a dog walker or owner. <br />
                                    Additionally, dogs get their own profiles too!
                                </p>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="assets/about/3.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Step 3</h4>
                                <h4 class="subheading">Start matching</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">
                                    Browse through the list of available walkers <br />
                                    and owners to find the perfect match!
                                </p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="assets/about/4.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Step 4</h4>
                                <h4 class="subheading">Message other users</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">
                                    You'll have to play the waiting game for a bit here. <br />
                                    But, once the conversation gets going, then the dog can be walked very soon!
                                </p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <h4 id="h4-step-text">LET'S<br>DOGGIE<br>WALK!</h4>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

   


<!-- Call to Action (Contact Me) -->
<section id="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block">
                    <h2 class="title wow fadeInDown" data-wow-delay=".3s" data-wow-duration="500ms">WANT TO GET IN TOUCH?</h2>
                    <p class="wow fadeInDown" data-wow-delay=".5s" data-wow-duration="500ms">
                        Do you have something you would like to say? <br /> We'd love to hear from you!
                    </p>
                    <div class="" data-wow-delay=".7s" data-wow-duration="500ms">
                        <%= link_to 'Contact Us', "/contact_us", :class => 'btn btn-default btn-contact wow fadeInDown' %>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</section>